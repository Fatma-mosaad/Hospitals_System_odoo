<odoo>
    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hms.department.form</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <notebook>
                        <page string="Doctors">
                            <field name="doctor_ids">
                                <tree>
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_department_tree" model="ir.ui.view">
        <field name="name">hms.department.tree</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_hms_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">hms.department</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hms_department"
              name="Departments"
              parent="menu_hms_root"
              action="action_hms_department"/>
</odoo>
