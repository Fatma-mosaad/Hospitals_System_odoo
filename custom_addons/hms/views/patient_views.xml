<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="birth_date"/>
                        <field name="age"/>
                        <field name="department_id" domain="[('is_opened', '=', True)]"/>
                        <field name="cr_ratio"/>
                        <field name="pcr"/>
                        <field name="blood_type"/>
                        <field name="doctors_ids" widget="many2many_tags"/>
                        <field name="history"/>
                        <field name="image"/>
                        <field name="address"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="age"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <record id="action_hms_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hms_root" name="Hospital Management"/>
    <menuitem id="menu_hms_patient" name="Patients" parent="menu_hms_root"/>
    <menuitem id="menu_hms_patient_action" name="All Patients"
              parent="menu_hms_patient" action="action_hms_patient"/>
</odoo>
